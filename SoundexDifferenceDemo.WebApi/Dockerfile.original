# See https://aka.ms/customizecontainer to learn how to customize your debug container and how Visual Studio uses this Dockerfile to build your images for faster debugging.

# This stage is used when running from VS in fast mode (Default for Debug configuration)
FROM mcr.microsoft.com/dotnet/aspnet:9.0 AS base
USER $APP_UID
WORKDIR /app
EXPOSE 8080
EXPOSE 8081


# This stage is used to build the service project
FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build
ARG BUILD_CONFIGURATION=Release
WORKDIR /src
COPY ["SoundexDifferenceDemo.Server/SoundexDifferenceDemo.WebApi/SoundexDifferenceDemo.WebApi.csproj", "SoundexDifferenceDemo.Server/SoundexDifferenceDemo.WebApi/"]
COPY ["SoundexDifferenceDemo.Server/SoundexDifferenceDemo.Persistence/SoundexDifferenceDemo.Persistence.csproj", "SoundexDifferenceDemo.Server/SoundexDifferenceDemo.Persistence/"]
COPY ["SoundexDifferenceDemo.Server/SoundexDifferenceDemo.Infrastructure/SoundexDifferenceDemo.Infrastructure.csproj", "SoundexDifferenceDemo.Server/SoundexDifferenceDemo.Infrastructure/"]
COPY ["SoundexDifferenceDemo.Server/SoundexDifferenceDemo.Application/SoundexDifferenceDemo.Application.csproj", "SoundexDifferenceDemo.Server/SoundexDifferenceDemo.Application/"]
COPY ["SoundexDifferenceDemo.Server/SoundexDifferenceDemo.Domain/SoundexDifferenceDemo.Domain.csproj", "SoundexDifferenceDemo.Server/SoundexDifferenceDemo.Domain/"]
COPY ["SoundexDifferenceDemo.Server/SoundexDifferenceDemo.SharedKernel/SoundexDifferenceDemo.SharedKernel.csproj", "SoundexDifferenceDemo.Server/SoundexDifferenceDemo.SharedKernel/"]
RUN dotnet restore "./SoundexDifferenceDemo.Server/SoundexDifferenceDemo.WebApi/SoundexDifferenceDemo.WebApi.csproj"
COPY . .
WORKDIR "/src/SoundexDifferenceDemo.Server/SoundexDifferenceDemo.WebApi"
RUN dotnet build "./SoundexDifferenceDemo.WebApi.csproj" -c $BUILD_CONFIGURATION -o /app/build

# This stage is used to publish the service project to be copied to the final stage
FROM build AS publish
ARG BUILD_CONFIGURATION=Release
RUN dotnet publish "./SoundexDifferenceDemo.WebApi.csproj" -c $BUILD_CONFIGURATION -o /app/publish /p:UseAppHost=false

# This stage is used in production or when running from VS in regular mode (Default when not using the Debug configuration)
FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "SoundexDifferenceDemo.WebApi.dll"]